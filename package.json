{
  "name": "chromadon-desktop",
  "version": "1.30.1",
  "description": "CHROMADON AI Browser Automation Control Panel",
  "main": "dist-electron/main.js",
  "author": "Barrios A2I <gary@barriosa2i.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BarriosA2I/chromadon-desktop.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder --dir",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "release:win": "tsc && vite build && electron-builder --win --publish always",
    "build:brain": "node scripts/build-brain.js"
  },
  "dependencies": {
    "@react-three/drei": "^9.92.0",
    "@react-three/fiber": "^8.15.0",
    "argon2": "^0.44.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^12.6.2",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1",
    "framer-motion": "^10.16.0",
    "puppeteer": "^24.36.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.7.0",
    "sql.js": "^1.13.0",
    "three": "^0.160.0",
    "uuid": "^13.0.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.160.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-electron": "^0.15.0",
    "vite-plugin-electron-renderer": "^0.14.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.barriosa2i.chromadon",
    "productName": "CHROMADON",
    "publish": {
      "provider": "github",
      "owner": "BarriosA2I",
      "repo": "chromadon-desktop"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/brain",
        "to": "brain",
        "filter": [
          "**/*",
          "!node_modules/.cache/**",
          "!node_modules/.package-lock.json",
          "!node_modules/@opentelemetry/!(api)/**",
          "!node_modules/@opentelemetry/!(api)",
          "!node_modules/playwright/**",
          "!node_modules/playwright",
          "!node_modules/playwright-core/**",
          "!node_modules/playwright-core",
          "!node_modules/openai/**",
          "!node_modules/openai",
          "!node_modules/@grpc/**",
          "!node_modules/@grpc",
          "!node_modules/@types/**",
          "!node_modules/@types",
          "!node_modules/protobufjs/**",
          "!node_modules/protobufjs",
          "!node_modules/**/src/**/*.ts",
          "!node_modules/**/src/**/*.tsx",
          "!node_modules/**/src/**/*.map"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.png",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "include": "build/installer.nsh"
    }
  }
}
