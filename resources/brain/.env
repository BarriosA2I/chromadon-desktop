# =============================================================================
# CHROMADON Autonomous Brain - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------
NODE_ENV=production
CHROMADON_PORT=3001
LOG_LEVEL=debug
LOG_FORMAT=pretty

# -----------------------------------------------------------------------------
# ANTHROPIC API (Neural RAG Brain v3.0)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# VISION PROVIDER
# -----------------------------------------------------------------------------
VISION_PROVIDER=anthropic
VISION_TIER=balanced

# -----------------------------------------------------------------------------
# REDIS (Optional - Caching & Session)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL_SECONDS=3600

# -----------------------------------------------------------------------------
# OBSERVABILITY (OpenTelemetry)
# -----------------------------------------------------------------------------
OTEL_ENABLED=false
OTEL_SERVICE_NAME=chromadon-brain
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Prometheus metrics port
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9464

# -----------------------------------------------------------------------------
# BROWSER AUTOMATION
# -----------------------------------------------------------------------------
BROWSER_HEADLESS=false
BROWSER_TIMEOUT_MS=30000
BROWSER_SLOW_MO_MS=300

# Screenshot settings
SCREENSHOT_QUALITY=80
SCREENSHOT_FORMAT=png

# CDP Endpoint for connecting to existing Chrome
CDP_ENDPOINT=http://127.0.0.1:9222

# Desktop Browser Controller
CHROMADON_DESKTOP_URL=http://127.0.0.1:3002
PREFER_DESKTOP=true

# Session Backup Password — used by agents to auto-restore expired sessions via Desktop API
SESSION_BACKUP_PASSWORD=

# -----------------------------------------------------------------------------
# SELF-HEALING
# -----------------------------------------------------------------------------
CRAG_GENERATE_THRESHOLD=0.7
CRAG_DECOMPOSE_THRESHOLD=0.4
HEALING_MAX_ATTEMPTS=3
HEALING_INITIAL_DELAY_MS=1000
HEALING_BACKOFF_MULTIPLIER=2

# Drift detection thresholds
DRIFT_HEALTHY_THRESHOLD=0.9
DRIFT_DEGRADING_THRESHOLD=0.7
DRIFT_CRITICAL_THRESHOLD=0.5

# Procedural memory decay
PROCEDURAL_DECAY_RATE=0.05
PROCEDURAL_MIN_DECAY=0.3

# -----------------------------------------------------------------------------
# CIRCUIT BREAKER
# -----------------------------------------------------------------------------
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
CIRCUIT_BREAKER_TIMEOUT_MS=30000

# -----------------------------------------------------------------------------
# MISSION CONTROLLER
# -----------------------------------------------------------------------------
CHECKPOINT_INTERVAL=5
MISSION_TIMEOUT_MS=300000
MAX_CONCURRENT_MISSIONS=10

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
API_KEY=
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# YOUTUBE DATA API v3
# -----------------------------------------------------------------------------
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
YOUTUBE_REFRESH_TOKEN=
YOUTUBE_TOKEN_STORE=

# -----------------------------------------------------------------------------
# GEMINI (Google AI) — Primary LLM Provider
# -----------------------------------------------------------------------------
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# OBS STUDIO (WebSocket v5)
# -----------------------------------------------------------------------------
OBS_WS_HOST=127.0.0.1
OBS_WS_PORT=4455
OBS_WS_PASSWORD=B@rrios1002
OBS_SAFE_MODE=true
OBS_SAFE_SCENES=StartingSoon,Main
