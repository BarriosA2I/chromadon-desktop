{
  "name": "chromadon-brain",
  "version": "1.16.5",
  "description": "CHROMADON Autonomous Brain - Mission-based browser automation with self-healing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:prod": "NODE_ENV=production tsc && npm run build:docs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration --testTimeout=60000",
    "test:e2e": "jest --testPathPattern=e2e --testTimeout=60000",
    "test:performance": "jest --testPathPattern=benchmarks --testTimeout=120000",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage docs",
    "prepublishOnly": "npm run build",
    "start": "node dist/index.js",
    "start:api": "ts-node src/api/server.ts",
    "start:dev": "NODE_ENV=development ts-node src/index.ts",
    "start:prod": "NODE_ENV=production node -r ./otel.config.js dist/index.js",
    "docker:build": "docker build -t chromadon-brain:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env chromadon-brain:latest",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f chromadon",
    "build:docs": "typedoc --out docs src/index.ts",
    "health": "curl -s http://localhost:3000/health | jq",
    "metrics": "curl -s http://localhost:9464/metrics"
  },
  "keywords": [
    "browser-automation",
    "autonomous-agent",
    "self-healing",
    "ai",
    "chromadon",
    "barrios-a2i"
  ],
  "author": "Gary Barrios <gary@barriosa2i.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.11.0",
    "@types/papaparse": "^5.5.2",
    "@types/pdf-parse": "^1.1.5",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@google/generative-ai": "^0.24.1",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.45.0",
    "@opentelemetry/exporter-prometheus": "^0.45.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.0",
    "@opentelemetry/resources": "^1.18.0",
    "@opentelemetry/sdk-metrics": "^1.18.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/semantic-conventions": "^1.18.0",
    "better-sqlite3": "^12.6.2",
    "chrono-node": "^2.9.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "immer": "^10.0.3",
    "mammoth": "^1.11.0",
    "multer": "^2.0.2",
    "obs-websocket-js": "^5.0.7",
    "openai": "^4.24.0",
    "otplib": "^13.2.1",
    "papaparse": "^5.5.2",
    "pdf-parse": "^1.1.4",
    "pino": "^8.17.2",
    "pino-http": "^10.5.0",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.40.0",
    "pngjs": "^7.0.0",
    "prom-client": "^15.1.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/barriosa2i/chromadon-brain.git"
  }
}
